<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
            android:id="@+id/txtPesoCadastrado"
            android:layout_width="75dp"
            android:layout_height="19dp"
            android:text="@string/txt_peso"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView_perfil_exerciciosFeitos"
            android:layout_marginBottom="40dp"/>

    <ImageView
            android:id="@+id/img_perfil"
            android:layout_width="200dp"
            android:layout_height="173dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView_perfil_exerciciosFeitos"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:srcCompat="@tools:sample/avatars" app:layout_constraintHorizontal_bias="0.553"/>


    <TextView
            android:id="@+id/txtTreinosFeitos"
            android:layout_width="309dp"
            android:layout_height="29dp"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView_perfil_exerciciosFeitos"
            app:layout_constraintTop_toTopOf="@+id/txt_user_nome"
            app:layout_constraintVertical_bias="0.105"/>

    <TextView
        android:id="@+id/txt_user_nome"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:text=""
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_perfil" />

    <TextView
            android:id="@+id/txt_user_pesoatual"
            android:layout_width="35dp"
            android:layout_height="0dp"
            android:text=" kg"
            app:layout_constraintStart_toEndOf="@+id/txtPesoCadastrado"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/textView9" android:layout_marginEnd="36dp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView_perfil_exerciciosFeitos"
            android:layout_marginBottom="40dp"/>

    <TextView
            android:id="@+id/textView9"
            android:layout_width="90dp"
            android:layout_height="19dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:text="Peso perdido:"
            app:layout_constraintStart_toEndOf="@+id/txt_user_pesoatual"
            app:layout_constraintTop_toBottomOf="@+id/txt_user_nome" android:layout_marginBottom="40dp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView_perfil_exerciciosFeitos"
            app:layout_constraintEnd_toStartOf="@+id/txt_perfil_pesoperdido"
            app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:id="@+id/txt_perfil_pesoperdido"
            android:layout_width="40dp"
            android:layout_height="22dp"
            android:text="5kg"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="48dp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView_perfil_exerciciosFeitos"
            android:layout_marginBottom="36dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="404dp"
            android:layout_height="410dp"
            android:id="@+id/recyclerView_perfil_exerciciosFeitos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
